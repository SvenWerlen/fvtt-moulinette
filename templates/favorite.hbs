<form autocomplete="off" onsubmit="event.preventDefault();">
  <h3>{{name}}</h3>
  <p>  
    <i>{{localize "mtte.favoriteDescr"}}</i>
  </p>
  <p>  
    <h2>{{sound.name}} <a class="sound-control" data-action="sound-play" title="{{localize "PLAYLIST.SoundPlay"}} / {{localize "PLAYLIST.SoundStop"}}"><i class="fas fa-play"></i></a></h2>
    <audio id="previewSound" src="{{sound.path}}"></audio>
  <p>  
    <h3>Slot</h3>
    {{#each slots as |row|}}
    <div class="slots">
      {{#each row as |s|}}
        <button class="slot" data-idx="{{s.num}}">
          {{#if s.name}}{{s.name}}{{/if}}
          {{#if s.faIcon}}<i class="fas fa-{{s.faIcon}}"></i>{{/if}}
          {{#if s.icon}}<img class="icon" src="{{s.icon}}"/>{{/if}}
        </button>
      {{/each}}
    </div>
    {{/each}}
  </p>
  <div class="form-group">
    <label>{{localize "mtte.shortText"}}</label>
    <div class="form-fields">              
      <input class="shortText" type="text" name="shortText" placeholder="ex: door">
    </div>
  </div>
  <p>  
    <i>{{localize "mtte.favoriteIconDescr"}}</i>
  </p>
  <div class="form-group">
    <label>{{localize "mtte.faIcon"}} <a href="https://fontawesome.com/icons?d=gallery&m=free" target="_blank">Font Awesome</a></label>
    <div class="form-fields">              
      <input class="icon" type="text" name="icon" placeholder="ex: door-open">
    </div>
  </div>
  <div class="form-group">
    <label>{{localize "mtte.localIcon"}}</label>
    <div class="form-fields">              
      <input class="icon2" type="text" name="icon2" placeholder="ex: moulinette/images/gameicons/swordman.svg">
      <button class="browse"><i class="fas fa-folder-open" title="{{localize "mtte.browse"}}"></i> </button>
    </div>
  </div>
  <p>
    <div class="actions">
      <button class="cancel"> {{localize "Cancel"}}</button>
      <button class="save" title="{{localize "mtte.saveFavoriteToolTip"}}"><i class="fas fa-save"></i> {{localize "mtte.saveFavorite"}}</button>
    </div>
  </p>
</form>
