<div class="main">
  <p>
    <div class="description">{{localize "mtte.customAudioDescr"}}</div>
    <div class="form-group display-mode search">
      <input id="searchAudio" class="searchinput" type="text" placeholder="{{localize "mtte.search"}}"></input>
      <button type="submit" class="search"><i class="fas fa-search"></i></button>
      <select class="packlist">
      <option value="-1">{{localize "mtte.allPacks"}} ({{count}})</option>
      {{#each packs as |p|}}<option value="{{p.id}}">{{p.publisher}} | {{pretty p.name}}</option>{{/each}}
      </select>
    </div>
    <div id="assets" class="list">
    </div>
  </p>
  <footer>
    <div class="actions">
      <button class="indexSounds" title="{{localize "mtte.indexSoundsToolTip"}}"><i class="fas fa-sync"></i> {{localize "mtte.indexSounds"}}</button>
      <button class="playChecked" title="{{localize "mtte.playCheckedToolTip"}}"><i class="fas fa-check-square"></i> {{localize "mtte.playChecked"}}</button>
      <button class="favoriteChecked" title="{{localize "mtte.favoriteCheckedToolTip"}}"><i class="fas fa-bookmark"></i> {{localize "mtte.favoriteChecked"}}</button>
      <button class="customReferences" title="{{localize "mtte.customReferencesToolTip"}}"><i class="fas fa-plus-square"></i> {{localize "mtte.customReferences"}}</button>
    </div>
    <div class="actions">
      <button class="activatePlaylist" title="{{localize "mtte.activatePlaylistTabToolTip"}}"><i class="fas fa-music"></i> {{localize "mtte.activatePlaylistTab"}}</button>
      <button class="deletePlaylist" title="{{localize "mtte.deletePlaylistToolTip"}}"><i class="fas fa-trash"></i> {{localize "mtte.deletePlaylist"}}</button>
      <button class="howto" title="{{localize "mtte.howtoSoundsToolTip"}}"><i class="fas fa-question-circle"></i> {{localize "mtte.howto"}}</button>
    </div>
  </footer>
  <p>
    <div class="messagebox"><i class="fas fa-check-circle"></i><span class="message"></span></div>
  </p>
</div>
